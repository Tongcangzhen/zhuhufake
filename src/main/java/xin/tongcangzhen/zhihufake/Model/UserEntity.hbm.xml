<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="xin.tongcangzhen.zhihufake.Model.UserEntity" table="user" schema="huzhi">
        <id name="id">
            <column name="id" sql-type="int(11) unsigned"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(64)" length="64"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(128)" length="128"/>
        </property>
        <property name="salt">
            <column name="salt" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="headUrl">
            <column name="head_url" sql-type="varchar(256)" length="256"/>
        </property>
    </class>
</hibernate-mapping>